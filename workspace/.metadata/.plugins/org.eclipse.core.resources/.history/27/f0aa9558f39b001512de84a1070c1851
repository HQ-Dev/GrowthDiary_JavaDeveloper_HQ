		// 3-2.1 算平均数
		Scanner in = new Scanner(System.in);
		int sum = 0;
		int count = 0;
		int number = in.nextInt();
		while (number != -1)
		{
			sum += number;
			count++;
			number = in.nextInt();
		}
		if (count > 0)
		{
			System.out.print("平均数是：" + (double)sum/count );
		}
