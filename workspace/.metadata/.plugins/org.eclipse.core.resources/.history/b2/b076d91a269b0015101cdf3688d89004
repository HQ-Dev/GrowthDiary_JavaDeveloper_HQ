// 初始化
//		Scanner in = new Scanner(System.in);
//// 读入投币金额
//		System.out.print("请投币");
//		int amount = in.nextInt();
//// 打印车票
//		System.out.println("**************");
//		System.out.println("Java城际铁路专线");
//		System.out.println("*  无指定座位票  *");
